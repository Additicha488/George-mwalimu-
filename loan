#include <stdio.h>
int main() {
	int age;
	
	float amount;
	printf("enter age:");
	scanf("%d",&age);
	
	printf("enter amount:");
	scanf("%f",&amount);
	
	if ( amount>=21000 && age>=21)
	{
		printf("congratulations you qalify fo4 the loan:"); }
		else{
		printf("unfortunately, we are unable to offer a loan at this time:");
		}
		return 0;
}